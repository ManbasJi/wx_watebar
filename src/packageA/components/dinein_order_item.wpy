    }
    .status{
    	font-size:28rpx;
    	color:#999;
    }
  }
  .order_list_fdate{
    padding-bottom: 26rpx;
    border-bottom: 1px solid #efefef;
    font-size:28rpx;
    color:#999;  	
  }
  .order_list_content{
  	width:100%;
  	border-bottom: 1px solid #efefef;
  	.goods_list{
  		background:#f2f2f2;
  		padding:10rpx 20rpx;
  	}
  	.goods_name{
  		color:#666;
  		font-size:28rpx;
  	}
  	.goods_num{
  		color:#666;
